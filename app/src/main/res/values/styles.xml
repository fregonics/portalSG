<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ArticleAppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" >
        <item name="android:colorPrimary">@color/articleBackground</item>
        <item name="android:colorPrimaryDark">@color/accentGrey</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:colorPrimary">@color/articleBackground</item>
    </style>

    <style name="ArticleTheme" parent="android:Theme">

        <item name="android:textViewStyle">@style/ArticleTextView</item>
    </style>
    <style name="ArticleTextView" parent="android:Widget.TextView">
        <item name="android:textSize">40sp</item>
    </style>
    <style name="AppTheme.ArticleHeadline" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
